<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="375.0" prefWidth="342.0" style="-fx-border-radius: 40; -fx-background-radius: 40" stylesheets="@../css/RecipeCard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mealwise.controllers.RecipeCardController">
    <StackPane VBox.vgrow="ALWAYS">
    <VBox fx:id="imagePane" minHeight="100" minWidth="100" prefHeight="200" style="" VBox.vgrow="ALWAYS" />
        <VBox alignment="BOTTOM_LEFT" maxHeight="146.0" prefHeight="146.0" prefWidth="342.0" spacing="10.0" styleClass="info-container" StackPane.alignment="BOTTOM_LEFT" VBox.vgrow="NEVER">
            <Label fx:id="recipeTitle" prefWidth="338.0" styleClass="name-label" text="The name of the recipe" wrapText="true" />
            <HBox prefWidth="264.0" spacing="5.0" styleClass="info-text" translateY="-7.0">
                <Label fx:id="recipeTime" text="x mins" />
                <Label fx:id="recipeLikes" text="Other lame info about views" />
            </HBox>
            <Button minHeight="33.0" onAction="#switchToDetailView" prefHeight="38.0" prefWidth="115.0" styleClass="recipe-button" text="View Recipe" />
         <padding>
            <Insets bottom="15.0" left="30.0" />
         </padding>
        </VBox>
    </StackPane>
</VBox>
